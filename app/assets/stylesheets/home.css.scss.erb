$txt_color: #E85248;
$txt_color_2: #FCCB56;
$title_size: 150px;

.title {
	color: $txt_color;
	font-family: "Old Standard tt";
	font-size: $title_size;
	position: relative;
	display:block;
	text-align: center;
  	top: 40%;
  	left:50%;
  	margin:0;
  	transform: translate(-50%,-50%);
  	-ms-transform: translate(-50%,-50%); /* IE 9 */
    -webkit-transform: translate(-50%,-50%);
    -moz-transform: translate(-50%,50%);
}

@media screen and (max-width: 400px) {
	.title {
		font-size: $title_size - 50;
	}
} 

.home_image {
	position: fixed;
	top:0px;
	left:0px;
	width:100%;
	height:100%;
	background-image: url("<%= asset_path 'landing.jpg' %>");
	background-size: cover;
	background-position: center bottom;
	-webkit-filter: blur(1px);
	-ms-filter: blur(1px);
	-moz-filter: blur(1px);
	filer:blur(1px);
}


.title-left {
