<% if current_member === @member %>
	<div class="profile-edit-btn">
		<%= link_to "", edit_profile_path(current_member) %>
	</div>
<% end %>
<div class="row">
	<div class="col-md-12">
		<div class="profile-photo">
				<div class="circle default-photo" style="background-image:url(<%= @member.photo.url%>)"></div>
		</div>
		<div class="profile-bio">
			<label><%= @member.name %></label>
			<% if @member.about %>
				<p> <%= @member.about %> </p>
			<% end %>
		</div>
	</div>
</div>
<hr class="divider"/>
<div class="row">
  <% @meals.each do |meal| %>
    <div class="col-lg-6 col-md-4 col-sm-12 meal-container">
      <div class="meal panel">
        <div class="front box1">
          <div class="profile slide-icon">
            <div class="author-bio">
              <h1>
                <%= Member.find(meal.member_id).firstName %> <span><%= Member.find(meal.member_id).lastName %></span> added
              </h1>
              <h1 class="name">
                "<%= meal.name %>"
              </h1>
              <h2>
                <%= Member.find(meal.member_id).about %>
              </h2>
              <div class="circle meal-author-photo" style="background-image:url(<%= Member.find(meal.member_id).photo.url %>)"></div>
            </div>
          </div>
          <%= image_tag(meal.meal_photos.first.photo,:class => "meal-photo") %>
          <div class="category">
          </div>
        </div>
        <div class="back box2">
          <h2 class="recipe">
            <%= meal.recipe %>
          </h2>
          <h2 class="price">
            $<%= meal.price %>
          </h2>
        </div>
      </div>
    </div>
  <% end %>
</div>
<hr class="blank"/>
