<div class="row">
	<div class="col-md-12">
		<%= form_for @member, :url => update_profile_path, 
							  :html => { :multipart => true } do |f| %>
                <%= hidden_field_tag :authenticity_token, form_authenticity_token -%>
                <div class="profile-edit-btn">
					<%= f.submit "Update", :class =>"btn" %>
				</div> 
                <div class="profile-photo">
					<div id="profile-image"class="circle default-photo"
					 	style="background-image:url(<%= @member.photo.url%>)">
					 	<div class="upload-btn"></div>
					 	<%= f.file_field :photo %> 
					 </div>
				</div>
				<div class="profile-bio">
					<%= f.text_field :name, :placeholder => 'name'%> 
					<%= f.text_area :about, :placeholder => 'about yourself' %>
				</div>                     	
        <% end %>
	</div>
</div>